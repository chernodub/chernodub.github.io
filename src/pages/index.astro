---
import MainHead from "../components/MainHead.astro";
import SocialLink from "../components/SocialLink.astro";
---

<html
  lang="en"
  class="h-full w-full bg-slate-100 dark:bg-gray-800 dark:text-gray-100"
>
  <head>
    <MainHead />
  </head>
  <body class="h-full w-full grid grid-rows-5 grid-cols-12 transition">
    <div
      class="col-start-3 col-span-full row-start-2 row-span-full flex flex-col gap-5 max-md:col-start-2 max-md:row-start-3 max-md:gap-8"
    >
      <div class="flex flex-col gap-3">
        <strong class="text-6xl max-md:text-4xl">Viktor Chernodub</strong>
        <span
          class="block text-2xl max-md:text-xl text-gray-500 dark:text-gray-400"
        >
          software engineer at <SocialLink
            href="https://yandex.com/adv/"
            class="font-bold hover:underline"
          >
            Yandex Ads
          </SocialLink>
        </span>
      </div>

      <ul class="flex gap-4 text-2xl">
        <li>
          <SocialLink href="https://linkedin.com/in/chernodub">
            LinkedIn
          </SocialLink>
        </li>
        <li>
          <SocialLink href="https://t.me/chernodubv">Telegram</SocialLink>
        </li>
        <li>
          <SocialLink href="https://github.com/chernodub">GitHub</SocialLink>
        </li>
      </ul>
    </div>
  </body>
</html>
